generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model rooms {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  roomId String @unique
  gender String
  hostel String
  floor String
  roomNum String
  capacity Int
  numFilled Int
  batch String
  students String[]
  roommateCode    String? @db.String
  codeGeneratedAt DateTime?

  @@index([batch, gender, hostel, floor])
}

model students {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  rollnum String @unique
  name String
  allocated Boolean
  hostel String
  roomnum String
  room String
  occupancy Int
  gender String 
  batch String

  @@index([hostel, roomnum])
}

model fresherDetails {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  rollnum String @unique
  motherTongue String[]
  placeOfLiving String
  branch String
  sportsHobbies String
  techHobbies String
  culturalHobbies String
  nature String
  futureInterests String
  sleep String
}

model smpDetails {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  rollnum String @unique
  branch String
  domain String
  goals String
  languages     String[] 
  tech_interests String[]
  sports        String[] 
  cult_interests String[]
  hobbies       String[] 
  name          String
}
